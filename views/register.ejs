<%- include('./partials/userheader') %>

<body class=" bg-light">

    <!-- Main Section-->
    <section
        class="mt-0 overflow-hidden  vh-100 d-flex justify-content-center align-items-center p-4">
        <!-- Page Content Goes Here -->

        <!-- Login Form-->
        <div class="col col-md-8 col-lg-6 col-xxl-5">
            <!-- Logo-->
            <a class="navbar-brand fw-bold fs-3 flex-shrink-0 order-0 align-self-center justify-content-center d-flex mx-0 px-0" href="/">
                <div class="d-flex align-items-center">
                    <svg class="f-w-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 77.53 72.26"><path d="M10.43,54.2h0L0,36.13,10.43,18.06,20.86,0H41.72L10.43,54.2Zm67.1-7.83L73,54.2,68.49,62,45,48.47,31.29,72.26H20.86l-5.22-9L52.15,0H62.58l5.21,9L54.06,32.82,77.53,46.37Z" fill="currentColor" fill-rule="evenodd"/></svg>
                </div>
            </a>
            <!-- / Logo-->
            <div class="shadow-xl p-5 p-lg-3 bg-white ">
                <h1 class="text-center mb-5 fs-3 fw-bold">Open Account</h1>
                <form  action="/signup" method="post" onsubmit="return validateForm()">
                  <% if ( userexists !=  undefined  &&  userexists !== '') { %>
                    <p style="color: rgb(255, 0, 0);"><%=  userexists %></p>
                    <% } %>

                  <div class="form-group">
                    <label class="form-label" for="register-fname">First name</label>
                    <input type="text" class="form-control" name="sfirstname" id="register-fname" placeholder="Enter your first name">
                    <span id="firstNameError" class="error text-danger"></span>
                </div>
                    <div class="form-group">
                      <label class="form-label" for="register-lname">last name</label>
                      <input type="text" class="form-control" name="slastname" id="register-lname" placeholder="Enter your last name">
                      <span id="lastNameError" class="error text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label class="form-label" for="register-email">Email address</label>
                      <input type="email" class="form-control" name="semail" id="register-email" placeholder="name@email.com">
                      <span id="emailError" class="error text-danger"></span>

                    </div>
                    <div class="form-group">
                      <label class="form-label" for="register-fname">phone number</label>
                      <input type="text" class="form-control" name="sphonenumber" id="register-pname" placeholder="Enter your phone number">
                      <span id="phoneError" class="error text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label class="form-label" for="register-password">Password</label>
                      <input type="password" class="form-control" name="spassword" id="register-password" placeholder="Enter your password">
                      <span id="passwordError" class="error text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-dark d-block w-100 my-4" >Sign Up</button> 
                  </form>
                  <p class="d-block text-center text-muted">Already registered? <a class="text-muted" href="/login">Login here.</a></p>
            </div>

        </div>
        <!-- / Login Form-->

        <!-- /Page Content -->
    </section>

    <script src="/javascripts/validation.js"></script>
 
  
    <script src="/assets/js/vendor.bundle.js"></script>
    
    <!-- Theme JS -->
    <script src="/assets/js/theme.bundle.js"></script>


</body>

</html>